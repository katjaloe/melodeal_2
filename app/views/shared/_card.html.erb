<%= link_to musician, class: "main-card" do %>
  <div class="card-image-container">
    <div class="card-img">
      <%= image_tag(musician.photo) %>
      <div class="musician-tag">
        <p><%= musician.type_of_musician %></p>
      </div>
    </div>
  </div>

  <div class="card-content">
    <h3><%=musician.first_name%></h3>
    <div class="ratings">
      <% musician.average_rating.round.times do %>
        <i class="fa fa-star rating-color"></i>
      <% end %>
      <% (5 - musician.average_rating.round).times do %>
        <i class="fa fa-star"></i>
      <% end %>
    </div>
    <div class="location"><p>📍 <%=musician.location%></p>
    </div>
    <p class="description"><%= musician.description.slice(0..80) + "..." %></p>
    <button class="btn btn-second-orange mb-4">Find out more!</button>
  </div>
<% end %>
